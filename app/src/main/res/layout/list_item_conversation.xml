<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_heedImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person_teal_700_24dp"
        android:layout_margin="@dimen/dp14"
        />
    <TextView
        android:id="@+id/tv_conv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:layout_toRightOf="@id/iv_heedImage"
        android:layout_marginTop="@dimen/dp5"
        android:textSize="@dimen/dp18"
        android:textColor="@color/name"/>
    <TextView
        android:id="@+id/tv_conv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:layout_below="@id/tv_conv_name"
        android:layout_toRightOf="@id/iv_heedImage"

        android:layout_marginBottom="@dimen/dp8"
        android:textSize="@dimen/dp14"
        android:textColor="@android:color/darker_gray"
        android:lines="1"
        android:layout_marginRight="@dimen/dp40"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18:20"
        android:textSize="@dimen/dp14"
        android:textColor="@android:color/darker_gray"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_conv_name"
        android:layout_marginRight="@dimen/dp20"/>
    <TextView
        android:id="@+id/tv_unread"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:text="20"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_time"
        android:layout_marginRight="@dimen/dp20"
        android:background="@drawable/shape_unreadcount"
        android:padding="2dp"
        />


</RelativeLayout>