<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/rl_root_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingRight="@dimen/dp12">

        <LinearLayout
            android:id="@+id/ll_me_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/iv_chat_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_head_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="我"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:layout_marginRight="@dimen/dp8"
            android:layout_toLeftOf="@id/ll_me_info"
            android:background="@drawable/button_background"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:paddingTop="@dimen/dp5"
            android:text="你好"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:layout_margin="@dimen/dp8"
            android:layout_toLeftOf="@id/ll_me_info"
            android:src="@drawable/ic_talk"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_root_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp8"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:paddingLeft="@dimen/dp12">

        <LinearLayout
            android:id="@+id/ll_other_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="ta"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginRight="70dp"
            android:layout_marginTop="@dimen/dp18"
            android:layout_toRightOf="@id/ll_other_info"
            android:background="@drawable/button_background"
            android:paddingBottom="@dimen/dp5"
            android:paddingLeft="@dimen/dp8"
            android:paddingRight="@dimen/dp8"
            android:paddingTop="@dimen/dp5"
            android:text="你好"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_ohter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp8"
            android:layout_marginTop="@dimen/dp18"
            android:layout_toRightOf="@id/ll_other_info"
            android:src="@drawable/ic_talk"
            android:visibility="gone"/>
    </RelativeLayout>


</LinearLayout>
